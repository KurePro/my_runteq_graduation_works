<div class="min-h-[calc(100vh-250px)] flex items-center justify-center py-8 px-4 sm:px-6 lg:px-8 bg-[#FDFDFD]">
  <div class="max-w-md w-full space-y-8 bg-white p-10 rounded-3xl shadow-lg border border-gray-100">
    <div class="text-center">
      <h2 class="font-mplus text-3xl font-bold text-[#2C5159]">
        新規登録
      </h2>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mt-8 space-y-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="space-y-5 font-mplus">
        <div>
          <%= f.label :name, class: "block text-sm font-bold text-[#2C5159] mb-1" %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "任意のユーザーネーム", class: "appearance-none relative block w-full px-4 py-3 border border-gray-300 placeholder-gray-400 text-gray-900 rounded-xl focus:outline-none focus:ring-2 focus:ring-[#6BAFB9] focus:border-[#6BAFB9] focus:z-10 sm:text-sm transition-all" %>
        </div>

        <div>
          <%= f.label :email, class: "block text-sm font-bold text-[#2C5159] mb-1" %>
          <%= f.email_field :email, autocomplete: "email", placeholder: "your@email.com", class: "appearance-none relative block w-full px-4 py-3 border border-gray-300 placeholder-gray-400 text-gray-900 rounded-xl focus:outline-none focus:ring-2 focus:ring-[#6BAFB9] focus:border-[#6BAFB9] focus:z-10 sm:text-sm transition-all" %>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-bold text-[#2C5159] mb-1" %>
          <% if @minimum_password_length %>
            <span class="text-xs text-gray-500 font-normal ml-1">(<%= @minimum_password_length %>文字以上)</span>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "••••••••", class: "appearance-none relative block w-full px-4 py-3 border border-gray-300 placeholder-gray-400 text-gray-900 rounded-xl focus:outline-none focus:ring-2 focus:ring-[#6BAFB9] focus:border-[#6BAFB9] focus:z-10 sm:text-sm transition-all" %>
        </div>

        <div>
          <%= f.label :password_confirmation, class: "block text-sm font-bold text-[#2C5159] mb-1" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "••••••••", class: "appearance-none relative block w-full px-4 py-3 border border-gray-300 placeholder-gray-400 text-gray-900 rounded-xl focus:outline-none focus:ring-2 focus:ring-[#6BAFB9] focus:border-[#6BAFB9] focus:z-10 sm:text-sm transition-all" %>
        </div>
      </div>

      <div class="pt-4">
        <%= f.submit "アカウント登録", class: "group relative w-full flex justify-center py-3 px-4 border border-transparent text-lg font-bold rounded-full text-[#2C5159] bg-[#F4D35E] hover:bg-[#F4D35E]/80 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#F4D35E] shadow-md hover:shadow-lg hover:-translate-y-0.5 transition-all duration-300 cursor-pointer font-mplus" %>
      </div>
    <% end %>

    <div class="flex items-center justify-center gap-2 text-sm font-mplus mt-4">
      <%- if controller_name != 'sessions' %>
        <%= link_to t('.sign_in'), new_session_path(resource_name), class: "text-[#2C5159] hover:text-[#6BAFB9] transition-colors" %>
      <% end %>
    </div>
  </div>
</div>