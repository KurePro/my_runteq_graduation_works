<% content_for(:title, t('.title')) %>
<div class="flex items-center justify-center py-8 px-4 sm:px-6 lg:px-8 bg-[#FDFDFD]">
  <div class="max-w-md w-full space-y-8 bg-white p-10 rounded-3xl shadow-lg border border-gray-100">
    <div class="text-center">
      <h2 class="font-mplus text-3xl font-bold text-[#2C5159]">
        アカウント編集
      </h2>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "mt-8 space-y-6"}) do |f| %>
      <%= render "shared/error_messages", object: resource %>
      <div class="space-y-5 font-mplus">
        <div>
          <%= f.label :name, class: "block text-sm font-bold text-[#2C5159] mb-1" %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "appearance-none relative block w-full px-4 py-3 border border-gray-300 placeholder-gray-400 text-gray-900 rounded-xl focus:outline-none focus:ring-2 focus:ring-[#6BAFB9] focus:border-[#6BAFB9] focus:z-10 sm:text-sm transition-all" %>
        </div>

        <div>
          <%= f.label :email, class: "block text-sm font-bold text-[#2C5159] mb-1" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "appearance-none relative block w-full px-4 py-3 border border-gray-300 placeholder-gray-400 text-gray-900 rounded-xl focus:outline-none focus:ring-2 focus:ring-[#6BAFB9] focus:border-[#6BAFB9] focus:z-10 sm:text-sm transition-all" %>
        </div>

        <div>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-bold text-[#2C5159] mb-1" %>
          <% if @minimum_password_length %>
            <span class="text-xs text-gray-500 font-normal ml-1">(<%= @minimum_password_length %>文字以上 / <%= t('.leave_blank_if_you_don_t_want_to_change_it') %>)</span>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "••••••••", class: "appearance-none relative block w-full px-4 py-3 border border-gray-300 placeholder-gray-400 text-gray-900 rounded-xl focus:outline-none focus:ring-2 focus:ring-[#6BAFB9] focus:border-[#6BAFB9] focus:z-10 sm:text-sm transition-all" %>
        </div>

        <div>
          <%= f.label :password_confirmation, class: "block text-sm font-bold text-[#2C5159] mb-1" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "••••••••", class: "appearance-none relative block w-full px-4 py-3 border border-gray-300 placeholder-gray-400 text-gray-900 rounded-xl focus:outline-none focus:ring-2 focus:ring-[#6BAFB9] focus:border-[#6BAFB9] focus:z-10 sm:text-sm transition-all" %>
        </div>

        <div>
          <%= f.label :current_password, class: "block text-sm font-bold text-[#2C5159] mb-1" %> 
          <span class="text-xs text-gray-500 font-normal ml-1">(<%= t('.we_need_your_current_password_to_confirm_your_changes') %>)</span>
          <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "••••••••", class: "appearance-none relative block w-full px-4 py-3 border border-gray-300 placeholder-gray-400 text-gray-900 rounded-xl focus:outline-none focus:ring-2 focus:ring-[#6BAFB9] focus:border-[#6BAFB9] focus:z-10 sm:text-sm transition-all" %>
        </div>
      </div>

      <div class="pt-4">
        <%= f.submit t('.update'), class: "group relative w-full flex justify-center py-3 px-4 border border-transparent text-lg font-bold rounded-full text-[#2C5159] bg-[#F4D35E] hover:bg-[#F4D35E]/80 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#F4D35E] shadow-md hover:shadow-lg hover:-translate-y-0.5 transition-all duration-300 cursor-pointer font-mplus" %>
      </div>
    <% end %>
    <div class="pt-2">
      <%= link_to t('.back'), user_path(current_user), class: "hover:underline" %>
    </div>
  </div>
</div>
