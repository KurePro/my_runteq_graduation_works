<% content_for(:title, t('.title')) %>
<div class="flex items-center justify-center py-8 px-4 sm:px-6 lg:px-8 bg-[#FDFDFD]">
  <div class="max-w-md w-full space-y-8 bg-white p-10 rounded-3xl shadow-lg border border-gray-100">
    <div class="text-center">
      <h2 class="font-mplus text-3xl font-bold text-[#2C5159]">
        ログイン
      </h2>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-8 space-y-6" }) do |f| %>
      <%= render "shared/error_messages", resource: resource %>
      <div class="space-y-5 font-mplus">
        <div>
          <%= f.label :email, class: "block text-sm font-bold text-[#2C5159] mb-1" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "あなたのメールアドレス", class: "appearance-none relative block w-full px-4 py-3 border border-gray-300 placeholder-gray-400 text-gray-900 rounded-xl focus:outline-none focus:ring-2 focus:ring-[#6BAFB9] focus:border-[#6BAFB9] focus:z-10 sm:text-sm transition-all" %>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-bold text-[#2C5159] mb-1" %>
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "••••••••", class: "appearance-none relative block w-full px-4 py-3 border border-gray-300 placeholder-gray-400 text-gray-900 rounded-xl focus:outline-none focus:ring-2 focus:ring-[#6BAFB9] focus:border-[#6BAFB9] focus:z-10 sm:text-sm transition-all" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center justify-center gap-2">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, class: "font-bold text-[#2C5159]" %>
          </div>
        <% end %>
      </div>

      <div class="pt-4">
        <%= f.submit "ログイン", class: "group relative w-full flex justify-center py-3 px-4 border-2 border-[#2C5159] text-lg font-bold rounded-full text-[#2C5159] bg-[#FDFDFD]/90 hover: focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#F4D35E] shadow-md hover:shadow-lg hover:-translate-y-0.5 transition-all duration-300 cursor-pointer font-mplus" %>
      </div>
    <% end %>

    <div class="flex items-center justify-center gap-2 text-sm font-mplus mt-4">
      <% if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to t('.sign_up'), new_registration_path(resource_name), class: "text-[#2C5159] hover:text-[#6BAFB9] transition-colors" %>
      <% end %>

      <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <span class="text-gray-400">／</span>
        <%= link_to t('.forgot_your_password'), new_password_path(resource_name), class: "text-[#2C5159] hover:text-[#6BAFB9] transition-colors" %>
      <% end %>
    </div>
  </div>
</div>