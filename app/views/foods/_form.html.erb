<%= form_with model: @food, local: :true do |form| %>
  <%= render 'shared/error_messages' %>
  <div class="mb-4">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="mb-4">
    <%= f.label :category_id %>
    <%= f.collection_select :category_id, @categories, :id, :name, prompt: "カテゴリー" %>
  </div>
  <div class="mb-4">
    <%= f.label :expiry_date %>
    <%= f.datetime_field :expiry_date %>
  </div>
  <div class="mb-4">
    <%= f.label :quantity %>
    <%= f.number_field :quantity, step: :any %>
  </div>
  <div class="mb-4">
    <%= f.label :unit %>
    <%= f.text_field :unit %>
  </div>
  <div class="mb-4">
    <%= f.submit "登録" %>
  </div>
<% end %>