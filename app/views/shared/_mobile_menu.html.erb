  <%# ハンバーガーメニューの内容 %>
  <div data-hamburger-target="menu" class="hidden md:hidden fixed inset-0 z-50 bg-[#D6EFED]/70 backdrop-blur-sm">
    <div class="bg-[#FDFDFD]/85 w-full h-full flex flex-col">
      <div class="bg-[#D6EFED]/95 border-b-4 border-[#6BAFB9]/90 h-27 flex items-center">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 w-full">
          <div class="flex justify-between items-center w-full">
            <%= link_to foods_path, class: "group flex items-center" do %>
              <%= image_tag 'Fridge_Note_Logo.png', alt: "FridgeNoteロゴ", class: "w-20 h-25" %>
              <h1 class="text-xl md:text-3xl font-bold tracking-wide font-montserrat text-[#2C5159]">
                Fridge <br>Note
              </h1>
            <% end %>
            <div data-action="click->hamburger#toggle" class="flex justify-end">
              <%# 閉じるボタンのSVGアイコン %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-9 text-[#2C5159]">
                <path stroke-linecap="round" stroke-linejoin="round" d="m9.75 9.75 4.5 4.5m0-4.5-4.5 4.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
              </svg>
            </div>
          </div>
        </div>
      </div>
      

      <%# ハンバーガーメニューのリンク一覧 %>
      <div class="flex-1 flex items-center justify-center">
        <nav class="font-montserrat flex flex-col items-center justify-center gap-10 text-[#2C5159]">
          <%= link_to foods_path, class: "group text-center" do %>
            <p class="text-3xl md:text-5xl font-bold tracking-wide group-hover:opacity-70 transition">
              Foods List
            </p>
            <p class="mt-2 text-sm tracking-widest opacity-70">
              食材一覧
            </p>
          <% end %>

          <%= link_to "#", class: "group text-center" do %>
            <p class="text-3xl md:text-5xl font-bold tracking-wide group-hover:opacity-70 transition">
              Shopping List
            </p>
            <p class="mt-2 text-sm tracking-widest opacity-70">
              買い物リスト
            </p>
          <% end %>

          <%= link_to user_path(current_user), class: "group text-center" do %>
            <p class="text-3xl md:text-5xl font-bold tracking-wide group-hover:opacity-70 transition">
              My Page
            </p>
            <p class="mt-2 text-sm tracking-widest opacity-70">
              マイページ
            </p>
          <% end %>

          <%= link_to destroy_user_session_path, data: { turbo_method: :delete },
            class: "group text-center pt-6 border-t border-[#2C5159]/20 w-full" do %>
            <div class="flex flex-row items-center justify-center gap-2">
              <p class="text-2xl font-semibold tracking-wide group-hover:opacity-70 transition">
                Logout
              </p>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 9V5.25A2.25 2.25 0 0 0 13.5 3h-6a2.25 2.25 0 0 0-2.25 2.25v13.5A2.25 2.25 0 0 0 7.5 21h6a2.25 2.25 0 0 0 2.25-2.25V15m3 0 3-3m0 0-3-3m3 3H9" />
              </svg>
            </div>
            <p class="mt-2 text-xs tracking-widest opacity-60">
              ログアウト
            </p>
          <% end %>
        </nav>
      </div>
    </div>
  </div>
